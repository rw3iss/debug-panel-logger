{
	"name": "dev-debug-panel",
	"version": "1.0.7",
	"description": "A draggable, resizable debug panel for logging and state inspection in web applications",
	"license": "ISC",
	"homepage": "https://github.com/rw3iss/dev-debug-panel#readme",
	"bugs": {
		"url": "https://github.com/rw3iss/dev-debug-panel/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rw3iss/dev-debug-panel.git"
	},
	"author": {
		"name": "Ryan Weiss",
		"email": "rw3iss@gmail.com",
		"url": "https://www.ryanweiss.net"
	},
	"type": "module",
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"browser": "dist/index.umd.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"browser": "./dist/index.umd.js",
			"import": "./dist/index.esm.js",
			"require": "./dist/index.cjs.js"
		}
	},
	"files": [
		"dist/**/*",
		"README.md"
	],
	"scripts": {
		"build": "npm run clean && node build.js && tsc",
		"dev": "node build.js --watch",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build",
		"test": "node tests/index.ts",
		"example": "chromium examples/example_StandaloneScript.html"
	},
	"keywords": [
		"debug",
		"logging",
		"panel",
		"development",
		"typescript",
		"vanilla-js"
	],
	"peerDependencies": {
		"eventbusjs": "^0.2.0",
		"jsondiffpatch": "^0.7.3"
	},
	"dependencies": {
		"eventbusjs": "^0.2.0",
		"fast-safe-stringify": "^2.1.1",
		"jsondiffpatch": "^0.7.3"
	},
	"devDependencies": {
		"@types/eventbusjs": "^0.2.0",
		"esbuild": "^0.21.5",
		"sass": "^1.93.2",
		"typescript": "^5.0.0"
	}
}